@page
@model RazorPagesMovie1.Pages.Bookings.IndexModel
@using System.Globalization

@{
    ViewData["Title"] = "Bookings";
}

<h1 class="text-white mb-4">Bookings</h1>

<p>
    <a asp-page="./Create" class="btn btn-primary">Create New</a>
</p>

<div class="row mt-4">

    @foreach (var item in Model.Bookings)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow-lg booking-card">

                <div class="card-body">

                    <!-- Movie Title -->
                    <h4 class="card-title fw-bold text-primary">
                        @item.Movie.Title
                    </h4>

                    <hr />

                    <p><strong>User ID:</strong> @item.UserId</p>

                    <p>
                        <strong>Date:</strong>
                        @item.BookingDate.ToString("yyyy/MM/dd")
                    </p>

                    <p>
                        <strong>Show Time:</strong>
                        @item.ShowTime.ToString("h:mm tt")
                    </p>

                    <p>
                        <strong>Tickets:</strong> @item.NumberOfTickets
                    </p>

                    <p>
                        <strong>Total Price:</strong>
                        @item.TotalPrice.ToString("C", CultureInfo.CreateSpecificCulture("en-ZA"))
                    </p>

                    <div class="mt-3">
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm me-1">Edit</a>
                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info btn-sm me-1 text-white">Details</a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </div>

                </div>
            </div>
        </div>
    }

</div>
