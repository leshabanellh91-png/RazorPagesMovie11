@page
@model AdminLoginModel
@{
    ViewData["Title"] = "Admin Login";
}

<h2>Admin Login</h2>

<form method="post">
    <div>
        <label>Username:</label>
        <input asp-for="Username" />
    </div>
    <div>
        <label>Password:</label>
        <input asp-for="Password" type="password" />
    </div>
    <div style="color:red">
        @Model.ErrorMessage
    </div>
    <button type="submit">Login</button>
</form>
