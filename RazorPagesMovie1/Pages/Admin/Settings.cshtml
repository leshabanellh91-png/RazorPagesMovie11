@page
@model RazorPageMovies.Pages.Admin.SettingsModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Site Settings";
}

<h2>Site Settings</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<form method="post">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Setting</th>
                <th>Value</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Settings.Count; i++)
            {
                <tr>
                    <td>@Model.Settings[i].Key</td>
                    <td>
                        <input asp-for="Settings[@i].Value" class="form-control" />
                        <input type="hidden" asp-for="Settings[@i].Id" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

