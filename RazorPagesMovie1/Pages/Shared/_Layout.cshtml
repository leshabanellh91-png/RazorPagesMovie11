<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Movie</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RazorPagesMovie1.styles.css" asp-append-version="true" />
</head>

<!-- BODY FIXED FOR FOOTER POSITIONING -->
<body class="d-flex flex-column min-vh-100">

    <!-- HEADER / NAVIGATION BAR -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">

                <!-- Brand -->
                <a class="navbar-brand" asp-page="/Movies/Index">Blockbusters Movies</a>

                <!-- Toggler -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Menu -->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Index">Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Privacy">Privacy</a>
                        </li>

                    </ul>
                </div>

            </div>
        </nav>
    </header>

    <!-- MAIN CONTENT -->
    <main role="main" class="flex-fill">
        <div class="container pb-3">
            @RenderBody()
        </div>
    </main>

    <!-- FOOTER ALWAYS AT THE BOTTOM -->
    <footer class="border-top footer text-muted mt-auto">
        <div class="container">
           
        </div>
    </footer>

    <!-- JS FILES -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
    &copy; 2025 - RazorPagesMovie1 -
    <a asp-page="/Privacy">Privacy</a>

</body>
</html>
