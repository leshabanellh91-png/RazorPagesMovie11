<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Blockbusters</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-page="/Index">Blockbusters</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Index">Home</a>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Movies/Upcoming">Upcoming Movies</a>
                        </li>

                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Movies/Index">Movies</a>

                            <!-- Correct Link for Login and Register in Razor Pages -->
                            <a asp-area="Identity" asp-page="/Account/Login">Login</a>

                        <li class="nav-item">
                            <a class="nav-link text-light" asp-page="/Account/Register">Register</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/About">About Us</a>
                        </li>

                        
                        
                        <!-- BOOKINGS (NEW) -->
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-page="/Bookings/Index">Bookings</a>
                        </li>
                        <partial name="_LoginPartial" />
                   

                       

                    </ul>

                    
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            <div class="page-content">
                @RenderBody()
            </div>
        </main>
    </div>

    <footer class="border-top footer text-light bg-dark mt-4">
        <div class="container">
            &copy; 2025 - Blockbusters
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
