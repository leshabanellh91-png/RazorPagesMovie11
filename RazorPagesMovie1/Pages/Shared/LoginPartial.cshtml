@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@model RazorPagesMovie1.Pages.Shared.LoginPartialModel

<ul class="nav navbar-nav navbar-right">
    @if (SignInManager.IsSignedIn(User))
    {
        <!-- If the user is logged in, show logout option -->
        <li class="nav-item">
            <a class="nav-link text-dark" asp-page="/Account/Logout">Logout</a>
        </li>
    }
    else
    {
        <!-- If the user is logged out, show login and register options -->
        <li class="nav-item">
            <a class="nav-link text-dark" asp-page="/Account/Login">Login</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-page="/Account/Register">Register</a>
        </li>
    }
</ul>
