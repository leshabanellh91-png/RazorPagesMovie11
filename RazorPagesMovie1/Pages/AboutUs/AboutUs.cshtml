@page "/About"

@model IndexModel
@{ ViewData["Title"] = "About Us"; }

<div class="container py-4">

    <h2>About Us</h2>
    <p>Welcome to BlockBusters Movie App</p>
    <p>
        Our mission is to provide a user-friendly movie database where
        you can browse, search, and view movie information.
    </p>

    <!-- IMAGE -->
    <div class="my-4 text-center">
        <img src="~/images/AboutUs.jpg" alt="About Us" class="img-fluid rounded shadow" style="max-width: 400px;" />
    </div>

    <p>
        Founded in 2025, RazorPagesMovie is dedicated to making movie
        discovery easy and accessible to all.
    </p>

    <h3>Our Team</h3>
    <p>
        We are a passionate group of developers and movie enthusiasts
        working hard to bring you the best movie browsing experience.
    </p>

    <h3>Contact Us</h3>
    <p>
        If you have any questions, feel free to
        <a asp-page="/Contact">Contact Us</a>.
    </p>

</div>
